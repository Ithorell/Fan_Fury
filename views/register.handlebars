<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Register Account</title>
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css'
      integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <div class='accountregister'>
      <header class='accounthead'>Register For an Account</header>
      <div class='card register border-dark'>
        <input class='rounded mb-2' type='text' placeholder='Email:' />
        <input class='rounded mb-2' type='text' placeholder='Username:' />
        <input class='rounded mb-2' type='text' placeholder='Password:' />
        <div
          class='wrap-input1 validate-input'
          data-validate='Tell us about yourself is required'
        >
          <textarea
            class='input rounded mb-2 about'
            name='message'
            placeholder='Tell us about yourself:'
          ></textarea>
        </div>
        <input
          class='rounded mb-2 pass2'
          type='text'
          placeholder='Password...Again:'
        />
        <input
          class='rounded mb-2 pass3'
          type='text'
          placeholder='You guessed it...Password:'
        />
        <button class='btn btn-success rounded'>Register</button>
      </div>
    </div>
  </body>
  <script src='/js/index.js'></script>
</html>

